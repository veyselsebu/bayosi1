@model bayosi.Models.yonetici

@{
    ViewBag.Title = "yonetici girişi";
    Layout =  "~/Views/_Layout.cshtml";
    
}

<h2>@ViewBag.HATA</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <body background="~/content/12345.jpg">
            <hr />
            @Html.ValidationSummary(true)
            <div align="center">
                <a href="~/Home/Index"><img src="~/Content/yonetici.jpg" width=360 height=180></a>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.yoneticiAd, new { @class = "control-label col-md-5" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.yoneticiAd)
                    @Html.ValidationMessageFor(model => model.yoneticiAd)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.sifre, new { @class = "control-label col-md-5" })
                <div class="col-md-5">
                    @Html.PasswordFor(model => model.sifre)
                    @Html.ValidationMessageFor(model => model.sifre)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="giris yap" class="btn btn-default" />
                </div>
            </div>
            </body>
</div>
}